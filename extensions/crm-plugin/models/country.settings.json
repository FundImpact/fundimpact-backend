{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "countries",
  "info": {
    "name": "country"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "abbreviation": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "identifier": {
      "type": "string",
      "unique": true
    },
    "states": {
      "plugin": "crm-plugin",
      "collection": "state",
      "via": "country"
    }
  }
}
