{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "organizations",
  "info": {
    "name": "organization"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "contact": {
      "plugin": "crm-plugin",
      "model": "contact",
      "via": "organization"
    },
    "address": {
      "type": "text"
    },
    "account": {
      "model": "account"
    },
    "short_name": {
      "type": "string",
      "required": false
    },
    "legal_name": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "organization_registration_type": {
      "model": "organization-registration-type"
    },
    "country": {
      "plugin": "crm-plugin",
      "model": "country"
    }
  }
}
